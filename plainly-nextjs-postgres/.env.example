# DB is provided via docker-compose for the app container
# If running Next locally (not in Docker), uncomment and replace host with localhost
DATABASE_URL=postgres://postgres:password@db:5432/mydatabase

# Plainly API
NEXT_PUBLIC_PLAINLY_API_KEY=your_plainly_api_key

# Plainly Project ID
NEXT_PUBLIC_PLAINLY_PROJECT_ID=your_plainly_project_id

# Public URL for webhooks (from localtunnel or ngrok)
NEXT_PUBLIC_WEBHOOK_PUBLIC_URL=https://plainly-nextjs-postgres.loca.lt
